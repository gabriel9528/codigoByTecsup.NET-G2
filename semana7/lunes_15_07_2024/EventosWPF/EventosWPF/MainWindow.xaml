<Window x:Class="EventosWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EventosWPF"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <StackPanel x:Name="Panel" PreviewMouseLeftButtonDown="Panel_PreviewMouseLeftButtonDown">
        <Button x:Name="buton1"  Content="Button 1" Width="100" Height="50" HorizontalAlignment="Center" Margin="15" Click="buton1_Click"/>
        <Button x:Name="buton2"  Content="Button 2" Width="100" Height="50" HorizontalAlignment="Center" Margin="15" Click="buton2_Click"/>
        <Button x:Name="buton3"  Content="Button 3" Width="100" Height="50" HorizontalAlignment="Center" Margin="15" Click="buton3_Click"/>
    </StackPanel>
</Window>
