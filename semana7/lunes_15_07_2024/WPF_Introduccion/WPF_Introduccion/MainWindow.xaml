<Window x:Class="WPF_Introduccion.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF_Introduccion"
        mc:Ignorable="d"
        Title="Primer formulario" Height="400" Width="600">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <TextBlock Text="Pruebita" Grid.Column="2" Grid.Row="3" ></TextBlock>
        <Button x:Name="buton1" Content="Boton" Grid.Column="1" Grid.Row="2" Grid.RowSpan="2"></Button>
        <Button Name="buton2" Content="prueba" Grid.Column="1" Grid.Row="1" Margin="20, 0, 0, 0"></Button>
    </Grid>
</Window>
