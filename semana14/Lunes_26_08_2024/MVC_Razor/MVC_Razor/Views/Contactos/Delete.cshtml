@using MVC_Razor.Models

@model Contacto

@{
    ViewData["Title"] = "Eliminar Contacto";
}

<h1 class="text-center">Eliminar contacto</h1>

<div class="row">
    <div class="offset-12">
        <div class="card border">
            <div class="card-header bg-dark">
                <h3 class="text-white"><strong>Eliminar usuario</strong></h3>
            </div>
            <div class="card-body">
                <form asp-action="Delete" method="post">
                    <input type="hidden" asp-for="Id" />
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="Name" class="control-label"></label>
                        <input asp-for="Name" class="form-control" placeholder="Ingrese su Nombre" readonly/>
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="Phone" class="control-label"></label>
                        <input asp-for="Phone" class="form-control" placeholder="Ingrese su Telefono" readonly />
                        <span asp-validation-for="Phone" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="CellPhone" class="control-label"></label>
                        <input asp-for="CellPhone" class="form-control" placeholder="Ingrese su celular" readonly />
                        <span asp-validation-for="CellPhone" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="Email" class="control-label"></label>
                        <input asp-for="Email" class="form-control" placeholder="Ingrese su correo" readonly />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>

                    <div class="form-group mt-3">
                        <button type="submit" class="btn btn-secondary d-block mx-auto"><i class="fade fa-user" aria-hidden="true"></i>Eliminar Usuario</button>
                    </div>

                    <a asp-controller="Contactos" asp-action="Index" class="btn btn-primary">Regresar</a>
                </form>
            </div>
        </div>
    </div>
</div>