@model BOL.CommonEntities.StudentModel

<div class="row">
    <div class="col-lg-6">
        <h2>Student List</h2>
    </div>
    <div class="col-lg-6 text-end">
        <a class="btn btn-success" href="@Url.Action("CreateStudent", "Students")">Add new Student</a>
    </div>
</div>

<div class="row">
    <div class="col-lg-12">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th scope="col">Student Id</th>
                    <th scope="col">First Name</th>
                    <th scope="col">Last Name</th>
                    <th scope="col">Email</th>
                    <th scope="col">Actions</th>
                </tr>
            </thead>
            <tbody>
                @{
                    if (Model != null && Model.StudentList != null && Model.StudentList.Count > 0)
                    {
                        foreach (var student in Model.StudentList)
                        {
                            <tr>
                                <td scope="row">@student.StudentId</td>
                                <td>@student.FirstName</td>
                                <td>@student.LastName</td>
                                <td>@student.Email</td>
                                <td>
                                    <a class="btn btn-primary btn-sm" href="@Url.Action("EditStudent2", "Students", new { StudentId = student.StudentId })">Edit</a>
                                    <a class="btn btn-danger btn-sm" href="@Url.Action("GetDeleteStudent", "Students", new { StudentId = student.StudentId })" onclick="return confirm('Estas seguro de elimiar este estudiante?');">Delete</a>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="5">No existen archivos</td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>
</div>
